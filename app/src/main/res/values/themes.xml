<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartFactory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <sensorValueItem name="colorPrimary">@color/purple_500</sensorValueItem>
        <sensorValueItem name="colorPrimaryVariant">@color/purple_700</sensorValueItem>
        <sensorValueItem name="colorOnPrimary">@color/white</sensorValueItem>
        <!-- Secondary brand color. -->
        <sensorValueItem name="colorSecondary">@color/teal_200</sensorValueItem>
        <sensorValueItem name="colorSecondaryVariant">@color/teal_700</sensorValueItem>
        <sensorValueItem name="colorOnSecondary">@color/black</sensorValueItem>
        <!-- Status bar color. -->
        <sensorValueItem name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</sensorValueItem>
        <!-- Customize your theme here. -->
    </style>
</resources>